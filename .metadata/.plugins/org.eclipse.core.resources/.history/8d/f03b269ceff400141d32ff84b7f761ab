package com.anagram;

public class Main {
	public static void main(String[] arg){
		String str1= "HelloWorld";
		String str2= "HelloWorld";

		System.out.println((new Main()).isAnagram(str1,str2));

	}
	public boolean isAnagram(String str1,String str2){
		
		if(str1==null||str2==null||str1.length()!=str2.length()){
			return false;
		}
		Char[] array=str1.toLowCase().toCharArray();
		StringBuffer sb=new StringBuffer(str2.toLowCase());
		int index=-2;
		for(Char char:array){
			index=sb.indexOf(String.valueOf(char));
			if (index==-1){
				return false;
			}
		sb.delete(index,index+1);
		}
		return true;
	}	
}