package com.cicidi.multithread.notify;

import java.util.List;

public class HelloThread implements Runnable {
	List list;

	public HelloThread(List list) {
		// TODO Auto-generated constructor stub
	}

	@Override
	public void run() {

		// TODO Auto-generated method stub
		// ThreadLocalMgt.set(msg);
		synchronized (list) {

			while (list.size() == 0) {
				try {
					System.out.print(Thread.currentThread().getName()+"1");
					list.wait();
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}

				System.out.println("Thread name =  "
						+ Thread.currentThread().getName() + "  " + "World");
			}
			// ThreadLocalMgt.threadLocal.wait();
			if (list.size() == 0)
				System.out.println("Thread name =  "
						+ Thread.currentThread().getName() + "  " + "Hello");
			list.add("Hello");
			list.notify();
			;

		}
	}


	}
}
