package com.cicidi.multithread.notify;

public class ThreadMgt implements Runnable {
	String[] msg;

	@Override
	public void run() {

		// TODO Auto-generated method stub
		ThreadLocalMgt.set(msg);
		synchronized (msg) {

			if (msg == "World") {
				System.out.println(Thread.currentThread().getName() + "  "
						+ ThreadLocalMgt.get());
				msg.notify();
			} else {
				try {

					msg.wait();
					System.out.println(Thread.currentThread().getName() + "  "
							+ ThreadLocalMgt.get());

				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
	}

	public ThreadMgt(String[] msg) {

		// ThreadLocalMgt.set(msg);这个方法如果在这个地方run，实际上是main　thread　在call
		// 需要给他放到run　方法里面
		this.msg = msg;
	}
}
