package com.cicidi.multithread.notify;

public class ThreadMgt implements Runnable {

	@Override
	public void run() {

		// TODO Auto-generated method stub
		if (ThreadLocalMgt.get() != "Hello")
			Thread.wait();
		System.out.println(ThreadLocalMgt.get());
	}

	public ThreadMgt(String msg) {
		ThreadLocalMgt.set(msg);
	}

}
