class Apple:
    'This is a Apple class'
    name = 'apple'
    count = 0
    def __init__(self, name):
        Apple.name = name;
        Apple.count += 1;
    def displayName(self):
        print self.name;
    def displayCount(self):
        print Apple.count;    
# print globals();

class Pear:
    'This is a Apple class'
    name = 'apple'
    count = 0
    def __init__(self, name):
        self.name = name;
        Apple.count += 1;
    def displayName(self):
        print self.name;
    def displayCount(self):
        print Apple.count;    
# print globals();



app1 = Apple("apple1")
app2 = Apple("apple2")
app1.displayName()
app1.displayCount()
app2.displayName()
app2.displayCount()
